<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimary">

    <TextView
        android:gravity="center"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who's Down uses phone numbers to identify its users. Please grant access to your contacts so Who's Down can identify your friends, and also verify your phone number so your friends can identify you. Your contacts information is not used for anything but this."/>

    <Button
        android:id="@+id/contactsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="requestContactsPermission"
        android:text="Grant contacts permission"/>

    <Button
        android:id="@+id/logInButton"
        android:onClick="logIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify phone number"/>
</LinearLayout>