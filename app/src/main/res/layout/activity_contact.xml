<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.vandyke.whosdown.ui.contact.viewmodel.ContactViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/colorPrimary">

                <ImageView
                    android:id="@+id/toolbarImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/default_contact_activity_pic"
                    app:layout_collapseMode="parallax"
                    android:scaleType="centerCrop"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.vandyke.whosdown.ui.contact.view.ContactActivity">

                <TextView
                    android:gravity="center"
                    android:text="@{viewModel.message}"
                    android:visibility="@{viewModel.down ? View.VISIBLE : View.INVISIBLE}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/contactMessage"
                    android:layout_marginTop="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="18sp"/>

                <ImageButton
                    android:tint="@color/colorPrimary"
                    android:scaleType="fitCenter"
                    android:background="?android:selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_call"
                    android:id="@+id/contactCall"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/contactText"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toBottomOf="@+id/contactMessage"/>

                <ImageButton
                    android:tint="@color/colorPrimary"
                    android:scaleType="fitCenter"
                    android:background="?android:selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_message"
                    android:id="@+id/contactText"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toTopOf="@+id/contactCall"
                    app:layout_constraintBottom_toBottomOf="@+id/contactCall"
                    android:layout_marginBottom="0dp"
                    app:layout_constraintLeft_toRightOf="@+id/contactCall"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintRight_toRightOf="parent"/>

                <SeekBar
                    android:enabled="@{viewModel.connected}"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="2"
                    android:progress="1"
                    android:progressTint="@color/colorAccent"
                    android:thumbTint="@color/colorAccent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contactCall"/>

                <TextView
                    android:text="Block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@+id/seekBar"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar"
                    android:id="@+id/blockText"/>

                <TextView
                    android:text="Follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="@+id/seekBar"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar"
                    android:id="@+id/followText"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:visibility="@{viewModel.connected ? View.GONE : View.VISIBLE}"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offlineText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="connecting..."
            android:textSize="24sp"
            android:translationZ="5dp"
            android:layout_marginBottom="16dp"
            app:layout_anchor="@+id/seekBar"
            app:layout_anchorGravity="bottom|center_horizontal"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>
