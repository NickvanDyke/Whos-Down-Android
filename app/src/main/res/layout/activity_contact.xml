<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.vandyke.whosdown.ui.contact.viewmodel.ContactViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vandyke.whosdown.ui.contact.view.ContactActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:src="@drawable/person_placeholder"
            android:id="@+id/contactPic"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

        <Switch
            android:enabled="@{!viewModel.blocked &amp;&amp; viewModel.connected}"
            android:checked="@={viewModel.subscribed}"
            android:text="Subscribed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/subscribedSwitch"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactMessage"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="viewStart"/>

        <Switch
            android:enabled="@{!viewModel.subscribed &amp;&amp; viewModel.connected}"
            android:checked="@={viewModel.blocked}"
            android:text="Blocked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/blockedSwitch"
            app:layout_constraintRight_toRightOf="@+id/subscribedSwitch"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/subscribedSwitch"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/subscribedSwitch"/>

        <TextView
            android:text='@{viewModel.down ? "Down" : "Not down"}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contactDown"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/contactPic"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:text="@{viewModel.message}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contactMessage"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/contactDown"
            android:layout_marginEnd="0dp"
            app:layout_constraintRight_toRightOf="@+id/contactDown"
            android:layout_marginStart="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/contactDown"/>

        <TextView
            android:visibility="@{viewModel.connected ? View.GONE : View.VISIBLE}"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offlineText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="connecting..."
            android:textSize="24sp"
            android:translationZ="5dp"
            android:layout_marginBottom="16dp"/>

    </android.support.constraint.ConstraintLayout>
</layout>
